html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Lyrify
    style
      include lyrics.css
  body
    div.body
      div.info
        img.cover(src=image)
        div.artist
          h1= artistName
          h2= trackName
          a.refresh(href='/refresh') REFRESH
          p
          a.logout(href='/logout') LOGOUT
      div.placeholder

      div.lyricsContainer
        for line in lyrics
          p= line
        a.source(href=url) Source
